<%= flash[:error] %>
<%= form_for(:user, :url => "login") do |f| %>
    <% unless flash[:error].blank? %>



    <% end %>

    <div class="field">
      <%= f.label :nickname %>
      <%= f.text_field :nickname %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit "login" %>
      <%=	 link_to "register", register_path %>
    </div>
<% end %>
