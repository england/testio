<!DOCTYPE html>
<html>
<head>
  <title>Testio</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <script type="text/javascript" src="http://vk.com/js/api/share.js?11" charset="windows-1251"></script>
</head>
<body>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to "Testio", root_path, :class => "brand" %>
      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to "home", root_path %></li>
          <% if is_admin? %>
              <li><%= link_to 'comments', comments_path %></li>
              <li><%= link_to 'new post', new_post_path %></li>
          <% end %>
        </ul>
        <% if logged_in? %>
            <p class="navbar-text pull-right">
              logged in as <a href="#"><%= current_user.nickname %></a>
              &nbsp;
              <%= link_to "logout", :controller => 'users', :action => 'logout' %>
            </p>
        <% else %>
            <p class="navbar-text pull-right">
              <%= link_to "login", :controller => 'users', :action => 'login' %>
              &nbsp;or&nbsp;
              <%= link_to "register", :controller => 'users', :action => 'register' %>
            </p>
        <% end %>
      </div>
      <!--/.nav-collapse -->
    </div>
  </div>
</div>

<br/>
<br/>
<br/>

<div class="container">




  <%= yield %>

</div>

</body>
</html>
